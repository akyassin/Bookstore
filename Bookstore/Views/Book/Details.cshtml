@model Bookstore.Models.Book

@{
    ViewData["Title"] = "Details";
    string imageName = !String.IsNullOrEmpty(Model.ImageName) ? Model.ImageName : "NoImage.png";
}

<h2 class="mt-2">Details</h2>

<div>
    <h4>Book</h4>
    <hr />
    <dl class="row">
        <div class="col-3">
            <dd class="col-sm-10">
                <img src="~/uploads/@imageName" class="img-thumbnail" style="width:300px" />
            </dd>
        </div>
        <div class="col-9">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Id)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Id)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                Author Name
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Author.FullName)
            </dd>
        </div>

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-outline-primary">Back to List</a>
</div>
